{
	"extends": [
		"plugin:vue/recommended",
    	"eslint:recommended"
  	],
  	"parserOptions": {
    	"ecmaVersion": 2017
  	},
	"rules": {
	    "indent": [
	      "error",
	      2
	    ],
	    "linebreak-style": [
	      "error",
	      "unix"
	    ],
	    "quotes": [
	      "error",
	      "single"
	    ],
	    "semi": [
	      "error",
	      "never"
	    ],
	    "no-console": [
	    	"off"
	    ]
	}
}